# Example .env file for M.I.A - The Successor of PseudoJarvis
# Copy this file to `.env` and fill in your credentials

OPENAI_API_KEY=your-openai-api-key
OLLAMA_API_KEY=your-ollama-api-key
GOOGLE_CALENDAR_API_KEY=your-google-calendar-api-key
# Add other keys as needed

# Sandbox (optional)
# MIA_SANDBOX_MEMORY_MB=256
# MIA_SANDBOX_TIMEOUT_MS=10000
# MIA_SANDBOX_WORKDIR=sandbox_runs
# MIA_SANDBOX_LOGDIR=logs/sandbox
# MIA_SANDBOX_FUEL=1000000

# Document generation (optional)
# MIA_DOC_TEMPLATE_DIR=templates/documents
# MIA_DOC_OUTPUT_DIR=output/documents
# MIA_DOC_DEFAULT_TEMPLATE=proposal

# Telegram messaging (optional)
# TELEGRAM_ENABLED=false
# TELEGRAM_API_ID=123456
# TELEGRAM_API_HASH=your-api-hash
# TELEGRAM_BOT_TOKEN=123456:ABCDEF
# TELEGRAM_PHONE=+5511999999999
# TELEGRAM_SESSION_DIR=sessions
# TELEGRAM_SESSION_NAME=mia_telegram
# TELEGRAM_DEFAULT_PEER=@your_username
# TELEGRAM_PARSE_MODE=markdown
# TELEGRAM_REQUEST_TIMEOUT=30

# Voice activity detection (optional)
# MIA_AUDIO_VAD_ENABLED=true
# MIA_AUDIO_VAD_AGGRESSIVENESS=2
# MIA_AUDIO_VAD_FRAME_MS=30
# MIA_AUDIO_VAD_SILENCE_MS=600

# Memory options (optional)
# MIA_MEMORY_ENABLED=true
# MIA_MEMORY_VECTOR_ENABLED=true
# MIA_MEMORY_GRAPH_ENABLED=true
# MIA_MEMORY_LONG_TERM_ENABLED=true
# MIA_MEMORY_PATH=memory/
# MIA_MEMORY_MAX_ENTRIES=10000
# MIA_MEMORY_MAX_RESULTS=5
# MIA_MEMORY_SIMILARITY=0.7
